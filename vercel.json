{
    "version": 2,
    "builds": [
        {
            "src": "dist/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/dist/index.js"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/public/$1"
        }
    ]
}
